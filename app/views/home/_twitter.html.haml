- form_for PubAccount.new do |f|
  = f.label :account, t("home.twitter.acount")
  = f.text_field :account
  
  = f.label :reason, t("home.twitter.reason")
  = f.text_area :reason
  
  = hidden_field_tag :type, "PubAccounts::Twitter"
  
  = f.submit t("track")
